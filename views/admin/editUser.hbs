{{> collapseNav}}
<div class="col-10">
<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">edit User</h1>
</div>
<form class="form-signup" action="/admin/users/{{editUser.id}}?_method=PATCH" method="POST" style="width: 100%;">
  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input type="text" id="name" name="name" class="form-control" placeholder="Name" required autofocus value="{{editUser.name}}">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="email">Email</label>
    <input type="text" id="email" name="email" class="form-control" placeholder="Email" required value="{{editUser.email}}">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="groupId">Choose Group</label>
    <select class="form-select" aria-label="Default select example" id="groupId" name="groupId">
      {{#each groups}}
        <option value="{{this.id}}" {{#ifCond this.id ../editUser.groupId}} selected {{/ifCond}}>
        {{this.name}}
      </option>
      {{/each}}
    </select>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="isAdmin">Choose Role</label>
    <select class="form-select" aria-label="Default select example" id="isAdmin" name="isAdmin">
      {{#ifCond editUser.isAdmin 1}}
        <option selected value="{{editUser.isAdmin}}">Is admin</option>
        <option value="0">Not a admin</option>
      {{else}}
        <option selected value="{{editUser.isAdmin}}">Not a admin</option>
        <option value="1">Is admin</option>
      {{/ifCond}}
    </select>
  </div>
  <button class="btn btn-primary btn-block" type="submit">Edit</button>
  <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
</form>
</div>