{{> collapseNav}}
<div class="col-10">
<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">Add Table</h1>
</div>
<form class="form-signup" action="/admin/tables" method="POST" style="width: 100%;">
  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input type="text" id="name" name="name" class="form-control" placeholder="Name" required autofocus>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="capacity">Capacity</label>
    <input type="number" id="capacity" name="capacity" class="form-control" placeholder="Capacity" required>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="available">Choose Available</label>
    <select class="form-select" aria-label="Default select example" id="available" name="available">
      <option selected value="0">Unavailable</option>
      <option value="1">Available</option>
    </select>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="status">Choose Status</label>
    <select class="form-select" aria-label="Default select example" id="status" name="status">
      <option selected value="0">Not active</option>
      <option value="1">Active</option>
    </select>
  </div>
  <button class="btn btn-primary btn-block" type="submit">Add</button>
  <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
</form>
</div>