{{> collapseNav}}
<div class="col-10">
<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">Edit Table</h1>
</div>
<form class="form-signup" action="/admin/tables/{{table.id}}?_method=PATCH" method="POST" style="width: 100%;">
  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input type="text" id="name" name="name" class="form-control" placeholder="Name" required autofocus value="{{table.name}}">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="capacity">Capacity</label>
    <input type="number" id="capacity" name="capacity" class="form-control" placeholder="Capacity" required value="{{table.capacity}}">
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="available">Choose Available</label>
    <select class="form-select" aria-label="Default select example" id="available" name="available">
      {{#ifCond table.available 1}}
        <option selected value="{{table.available}}">Available</option>
        <option value="0">Unavailable</option>
      {{else}}
        <option selected value="{{table.available}}">Unavailable</option>
        <option value="1">Available</option>
      {{/ifCond}}
    </select>
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="status">Choose Status</label>
    <select class="form-select" aria-label="Default select example" id="status" name="status">
      {{#ifCond table.status 1}}
        <option selected value="{{table.status}}">Active</option>
        <option value="0">Not active</option>
      {{else}}
        <option selected value="{{table.status}}">Not active</option>
        <option value="1">Active</option>
      {{/ifCond}}
    </select>
  </div>
  <button class="btn btn-primary btn-block" type="submit">Add</button>
  <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
</form>
</div>