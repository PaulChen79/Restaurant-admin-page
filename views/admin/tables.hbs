{{> collapseNav}}
<div class="col-10">
  <div class="row">
    <h2 style="padding: 8px 0px;">Manage<span class="fs-6 mx-5">table</span></h2>
  </div>
  <div class="row mt-3">
    <div class="d-flex justify-content-between">
      <a class="btn btn-primary btn-block" href="/admin/addTable">Add Table</a>
      <form class="d-flex" action="/admin/tables/search">
        <input class="form-control  me-2" style="width: 230px;" type="search" placeholder="Search by name or email" aria-label="Search" name="keyword">
        <button class="btn btn-outline-success" type="submit">Search</button>
        <a class="btn btn-outline-info mx-2" href="/admin/tables">All</a>
      </form>
    </div>
  </div>
  <div class="row mt-5">
    <table class="table align-middle">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Table Name</th>
          <th scope="col">Capacity</th>
          <th scope="col">Available</th>
          <th scope="col">Status</th>
          <th scope="col" class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each tables}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.name}}</td>
          <td>{{this.capacity}}</td>
          <td>{{#ifCond this.available 1}}Available{{else}}Unavailable{{/ifCond}}</td>
          <td>{{#ifCond this.status 1}}Active{{else}}Not active{{/ifCond}}</td>
          <td class="text-center">
            <button type="button" class="btn btn-link">
              <a class="btn btn-primary btn-block" href="/admin/tables/{{this.id}}/edit">
                Edit
              </a>
            </button>
            <form action="/admin/tables/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger btn-block">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>